@page
@model dimabeCRUD.Pages.RoleUsers.EditModel

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>Roles de Usuario</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="RoleUser.Id" />
            <div class="form-group">
                <label asp-for="RoleUser.RoleId" class="control-label"></label>
                <select asp-for="RoleUser.RoleId" class="form-control" asp-items="ViewBag.RoleId"></select>
                <span asp-validation-for="RoleUser.RoleId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RoleUser.UserId" class="control-label"></label>
                <select asp-for="RoleUser.UserId" class="form-control" asp-items="ViewBag.UserId"></select>
                <span asp-validation-for="RoleUser.UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-8">
                        <span title="Guardar" data-toggle="tooltip"><button type="submit" class="btn btn-primary btn-block"><i class="far fa-save"></i></button></span>
                    </div>
                    <div class="col-sm-4">
                        <a class="btn btn-success btn-block" asp-page="./Index"><i class="fas fa-undo-alt"></i> Lista</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
