@page
@model dimabeCRUD.Pages.Users.DetailsModel

@{
    ViewData["Title"] = "Detalles";
}

<h1>Detalles</h1>

<div>
    <h4>Usuario</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.FullName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.FullName)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Email)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.RegistrationDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.RegistrationDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.RoleUsers)
        </dt>
        <dd class="col-sm-2">
            @foreach (var item in Model.User.RoleUsers)
            {
                @Html.DisplayFor(modelItem => item.Role.NameForList)

            }
        </dd>
    </dl>
</div>
<div>
    <span title="Editar" data-toggle="tooltip"><a class="btn btn-warning btn-sm" asp-page="./Edit" asp-route-id="@Model.User.Id"><i class="far fa-edit"></i></a></span>
    <a class="btn btn-success btn-sm" asp-page="./Index"><i class="fas fa-undo-alt"></i> Lista</a>
</div>
